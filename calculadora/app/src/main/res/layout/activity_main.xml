<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:id="@+id/main_container"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context="br.ufpe.cin.android.calculadora.MainActivity">

    <TextView
            android:id="@+id/text_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:textAlignment="textStart"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    <EditText
            android:id="@+id/text_calc"
            android:layout_width="396dp"
            android:layout_height="53dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:enabled="false"
            android:gravity="bottom"
            android:inputType="numberDecimal"
            android:lines="2"
            android:maxLines="2"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_info" />

    <Button
            android:id="@+id/btn_7"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="7"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/btn_8"
            app:layout_constraintBottom_toTopOf="@+id/btn_4" app:layout_constraintTop_toBottomOf="@+id/text_calc"
            app:layout_constraintVertical_bias="0.727" android:layout_marginTop="8dp"/>

    <Button
            android:id="@+id/btn_8"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="8"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/btn_7"
            app:layout_constraintEnd_toStartOf="@+id/btn_9" app:layout_constraintBottom_toTopOf="@+id/btn_5"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/text_calc"
            app:layout_constraintVertical_bias="1.0"/>

    <Button
            android:id="@+id/btn_9"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="9"
            android:textSize="16sp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/text_calc"
            app:layout_constraintStart_toEndOf="@+id/btn_8" app:layout_constraintEnd_toStartOf="@+id/btn_Divide"
            app:layout_constraintBottom_toTopOf="@+id/btn_6" app:layout_constraintVertical_bias="0.0"/>

    <Button
            android:id="@+id/btn_Divide"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="/"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/btn_9"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/text_calc"
            app:layout_constraintBottom_toTopOf="@+id/btn_Multiply"/>


    <Button
            android:id="@+id/btn_4"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="4"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/btn_5"
            app:layout_constraintBottom_toTopOf="@+id/btn_1" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/text_calc" app:layout_constraintVertical_bias="1.0"/>

    <Button
            android:id="@+id/btn_5"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="5"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/btn_4"
            app:layout_constraintEnd_toStartOf="@+id/btn_6" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/text_calc"
            app:layout_constraintBottom_toTopOf="@+id/btn_2" app:layout_constraintVertical_bias="1.0"/>

    <Button
            android:id="@+id/btn_6"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="6"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/text_calc" app:layout_constraintStart_toEndOf="@+id/btn_5"
            app:layout_constraintEnd_toStartOf="@+id/btn_Multiply" android:layout_marginTop="48dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_3"
            app:layout_constraintVertical_bias="1.0"/>

    <Button
            android:id="@+id/btn_Multiply"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="*"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/btn_6"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/text_calc"
            app:layout_constraintBottom_toTopOf="@+id/btn_Subtract" app:layout_constraintVertical_bias="1.0"/>


    <Button
            android:id="@+id/btn_1"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/btn_2" android:layout_marginTop="104dp"
            app:layout_constraintTop_toBottomOf="@+id/text_calc" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_Dot" app:layout_constraintVertical_bias="0.0"/>

    <Button
            android:id="@+id/btn_2"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="2"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/text_calc" app:layout_constraintStart_toEndOf="@+id/btn_1"
            app:layout_constraintEnd_toStartOf="@+id/btn_3" android:layout_marginTop="104dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_0"/>

    <Button
            android:id="@+id/btn_3"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="3"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/text_calc" app:layout_constraintStart_toEndOf="@+id/btn_2"
            app:layout_constraintEnd_toStartOf="@+id/btn_Subtract" android:layout_marginTop="108dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_Equal" app:layout_constraintVertical_bias="1.0"/>

    <Button
            android:id="@+id/btn_Subtract"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/btn_3"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="104dp"
            app:layout_constraintTop_toBottomOf="@+id/text_calc" app:layout_constraintBottom_toTopOf="@+id/btn_Add"/>


    <Button
            android:id="@+id/btn_Dot"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="."
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintBaseline_toBaselineOf="@+id/btn_0"
            app:layout_constraintEnd_toStartOf="@+id/btn_0"/>

    <Button
            android:id="@+id/btn_0"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/btn_1" app:layout_constraintStart_toEndOf="@+id/btn_Dot"
            app:layout_constraintEnd_toStartOf="@+id/btn_Equal"/>

    <Button
            android:id="@+id/btn_Equal"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="="
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/text_calc" app:layout_constraintStart_toEndOf="@+id/btn_0"
            app:layout_constraintEnd_toStartOf="@+id/btn_Add" android:layout_marginTop="152dp"/>

    <Button
            android:id="@+id/btn_Add"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="+"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/btn_Equal" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="152dp" app:layout_constraintTop_toBottomOf="@+id/text_calc"/>


    <Button
            android:id="@+id/btn_LParen"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="("
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintBaseline_toBaselineOf="@+id/btn_RParen"
            app:layout_constraintEnd_toStartOf="@+id/btn_RParen"/>

    <Button
            android:id="@+id/btn_RParen"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=")"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/btn_Dot" app:layout_constraintStart_toEndOf="@+id/btn_LParen"
            app:layout_constraintEnd_toStartOf="@+id/btn_Power"/>

    <Button
            android:id="@+id/btn_Power"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="^"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/btn_Add" app:layout_constraintStart_toEndOf="@+id/btn_RParen"
            app:layout_constraintEnd_toStartOf="@+id/btn_Clear"/>

    <Button
            android:id="@+id/btn_Clear"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="C"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/btn_Power" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_Add"/>

</androidx.constraintlayout.widget.ConstraintLayout>